{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "module": "ESNext",  // Utilisation d'ESNext pour une meilleure prise en charge des modules ECMAScript
    "moduleResolution": "NodeNext",
    "types": [
      "jest",
      "node"
    ],
    "emitDecoratorMetadata": true,
    "allowJs": true
  },
  "files": [
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts",
    "src/**/*.ts"  // Ajoute tous les fichiers .ts pour un traitement complet
  ]
}
